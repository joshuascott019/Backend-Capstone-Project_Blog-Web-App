<%- include('layout', { title: 'Home' , content: '' }) %>

    <section>
        <h2>Blog Posts</h2>
        <% if (posts.length===0) { %>
            <p>No posts yet. <a href="/new">Create one!</a></p>
            <% } else { %>
                <ul>
                    <% posts.forEach((post, index)=> { %>
                        <li>
                            <h3>
                                <%= post.title %>
                            </h3>
                            <p>
                                <%= post.content %>
                            </p>
                            <a href="/edit/<%= index %>">Edit</a> |
                            <a href="/delete/<%= index %>"
                                onclick="return confirm('Are you sure you want to delete this post?');">Delete</a>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
    </section>
    <%- include('footer') %>